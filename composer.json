{
  "name": "ingenerator/warden-validator-symfony",
  "type": "library",
  "description": "Validation provider for warden based on symfony validation",
  "homepage": "http://github.com/ingenerator/warden-validator-symfony",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Andrew Coulton",
      "email": "andrew@ingenerator.com",
      "homepage": "https://ingenerator.com"
    },
    {
      "name": "Craig Gosman",
      "email": "craig@ingenerator.com",
      "homepage": "https://ingenerator.com"
    }
  ],
  "require": {
    "php": "^7.2",
    "symfony/validator": "^3.0",
    "ingenerator/warden-core": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0",
    "symfony/yaml": "^4.2"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://php-packages.ingenerator.com"
    }
  ],
  "suggest": {
    "doctrine/annotations": "To use the default annotation-based validation in warden-core"

  },
  "autoload": {
    "psr-4": {
      "Ingenerator\\Warden\\Validator\\Symfony\\": "src/"
    }
  },
  "config": {
    "preferred-install": "dist"
  }
}
